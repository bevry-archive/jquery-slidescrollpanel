// ------------------------------------
// Body

body
	padding-left: 0px
	padding-right: 0px
	font-family: Arial, Helvetica, sans-serif
	color: #000000

	&.loading
		cursor: wait

.clear
	clear: left


// ------------------------------------
// Headings

h1
	font-size: 2.5em
	font-weight: bold
	margin: 0.67em 0px 0.5em

h2
	font-size: 2em
	font-weight: bold
	margin: 0.83em 0px 0.4em

h3
	font-size: 1.5em
	font-weight: bold
	margin: 0.83em 0px 0.3em


// ------------------------------------
// Code

pre > code
	border: 5px solid #DDD
	padding: 7px
	font-size: 14px
	overflow: auto
	max-height: 500px
	width: 100%
	white-space: pre
	display: block

span.code
	font-family: "Courier New", Courier, monospace
	margin-left: 10px
	padding-left: 10px
	font-size: 11px
	border-left: 1px solid #000


// ------------------------------------
// Emphasis

strong
	font-weight: bold

em
	font-style: italic


// ------------------------------------
// Paragraphs

p
.section div
	padding: 0px
	margin:1em 0

.section.install
	p
	div
		margin:0.2em 0 1em


// ------------------------------------
// Inputs

textarea
	width: 100%

label
	font-weight: bold


// ------------------------------------
// Columns

.cols.two
	position: relative
	overflow: auto

.cols .one
	width:49%
	float: left

.cols .two
	width:49%
	float: right


// ------------------------------------
// Links

a
	&.help
		text-decoration: none
		border-bottom:1px dotted #00E

	&:visited
		border-bottom:1px dotted #551A8B


// ------------------------------------
// Sections

.section
	border-top: 1px solid #BBB
	margin-top: 15px
	margin-left: 5%
	margin-right: 5%
	padding: 5px
	padding-bottom: 0px
	background-color: white

	ul
		list-style: none
		margin-top: 5px

		li
			display: inline

		&.features
			display: block
			list-style: disc
			margin-left:2em

			li
				list-style: disc
				display: list-item

		&.install
		&.install li
			list-style: disc outside none

		&.install
			margin-left: 2em

			li
				display: list-item

	.link
		font-size: 12px
		font-style: italic
		padding-left: 10px
		margin-left: 10px

	.title
		font-weight: bold
		font-size: 16px

	.important
		text-decoration: underline

	&.header
		text-align: center
		font-size: 12px
		padding-top: 10px
		border-top: none

	&.footer
		text-align: center
		font-size: 12px
		padding-top: 10px


// Social

.social-buttons
	.social-button
		display: inline-block
		width: 100px
		text-align: left
		overflow: hidden
		&.google-plus-one-button
		&.hacker-news-submit-button
			width: 80px
		&.github-follow-button
		&.twitter-follow-button
			width: 170px
			height: auto
		&.reddit-submit-button
			width: 140px
			iframe
				padding-top: 3px