// Import
@import url("../vendor/yui-cssreset.css")
@import url("./generic.css")

.demo
	a
		cursor: pointer
		color: blue
		display: block
		margin-bottom: 5px

		&:hover
			text-decoration: underline

	.demo-box
		width: 100%
		height: 300px
		overflow: hidden
		border: 5px ridge #EEE
		position: relative
		margin: 0
		padding: 0
		text-align: center

		.slidescrollpanel-wrap
			background: rgba(255,0,0,0.05)
			border: 1px solid red

		.slidescrollpanel-content
			text-align: left
			border: 1px solid black
			background: #EEE
			position: relative

			// bugfix for android
			pre > code
				overflow: hidden

		.demo-buttons
			margin-top: 100px
			button
				margin: 0.5em
				width: 150px
				max-width: 40%
